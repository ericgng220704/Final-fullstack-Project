<h1>All Products</h1>
<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-4">
      <h2><%= link_to product.name, product_path(product) %></h2>
      <p><%= product.short_description %></p>
      <p>$<%= product.price %></p>
    </div>
  <% end %>
</div>
<%= paginate @products %>
