<main>
  <%= render "shared/navbar" %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-6">
      <% if @product.image_path.present? %>
        <img src="/<%= @product.image_path %>" class="img-fluid rounded" alt="<%= @product.name %>">
      <% else %>
        <img src="/img/placeholder.jpg" class="img-fluid rounded" alt="Placeholder Image">
      <% end %>
    </div>
    <div class="col-md-6">
      <h1 class="mb-3"><%= @product.name %></h1>
      <p class="fw-bold">Price: $<%= @product.price %></p>
      <p><%= @product.description %></p>
      <p><strong>Category:</strong> <%= @product.category.name %></p>
      <p><strong>Dimensions:</strong> <%= @product.depth %> x <%= @product.width %> x <%= @product.height %> cm</p>
      <p><strong>Stock Quantity:</strong> <%= @product.stock_quantity %></p>
      <%= form_with url: add_to_cart_cart_path, method: :post, local: true do |f| %>
        <%= f.hidden_field :product_id, value: @product.id %>
        <div class="input-group mb-3">
          <%= f.number_field :quantity, value: 1, min: 1, class: "form-control" %>
          <button type="submit" class="btn btn-primary">Add to Cart</button>
        </div>
      <% end %>
      <%= link_to 'Back to Products', products_path, class: 'btn btn-secondary mt-3' %>
    </div>
  </div>
</div>
</main>
